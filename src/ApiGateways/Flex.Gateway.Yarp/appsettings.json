{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "ReverseProxy": {
    "Routes": {
      "SystemGrpcRoute": {
        "ClusterId": "SystemGrpcCluster",
        "Match": {
          "Path": "/flex.system.grpc.services.BranchService/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/flex.system.grpc.services.BranchService"
          }
        ]
      },
      "IdentityGrpcRoute": {
        "ClusterId": "IdentityGrpcCluster", 
        "Match": {
          "Path": "/identity/{**catch-all}"
        }
      },
      "SecuritiesGrpcRoute": {
        "ClusterId": "SecuritiesGrpcCluster",
        "Match": {
          "Path": "/securities/{**catch-all}"
        }
      },
      "OrderingGrpcRoute": {
        "ClusterId": "OrderingGrpcCluster",
        "Match": {
          "Path": "/ordering/{**catch-all}"
        }
      },
      "InventoryGrpcRoute": {
        "ClusterId": "InventoryGrpcCluster",
        "Match": {
          "Path": "/inventory/{**catch-all}"
        }
      },
      "InvestorGrpcRoute": {
        "ClusterId": "InvestorGrpcCluster",
        "Match": {
          "Path": "/investor/{**catch-all}"
        }
      },
      "BasketGrpcRoute": {
        "ClusterId": "BasketGrpcCluster",
        "Match": {
          "Path": "/basket/{**catch-all}"
        }
      },
      "IntegrationGrpcRoute": {
        "ClusterId": "IntegrationGrpcCluster",
        "Match": {
          "Path": "/integration/{**catch-all}"
        }
      },
      "JobGrpcRoute": {
        "ClusterId": "JobGrpcCluster",
        "Match": {
          "Path": "/job/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "SystemGrpcCluster": {
        "Destinations": {
          "SystemGrpcDestination": {
            "Address": "https://localhost:7004"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HttpRequest": {
          "Version": "2",
          "VersionPolicy": "RequestVersionExact"
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:02:00"
          }
        }
      },
      "IdentityGrpcCluster": {
        "Destinations": {
          "IdentityGrpcDestination": {
            "Address": "https://localhost:7001"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HttpRequest": {
          "Version": "2",
          "VersionPolicy": "RequestVersionExact"
        }
      },
      "SecuritiesGrpcCluster": {
        "Destinations": {
          "SecuritiesGrpcDestination": {
            "Address": "https://localhost:7005"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HttpRequest": {
          "Version": "2",
          "VersionPolicy": "RequestVersionExact"
        }
      },
      "OrderingGrpcCluster": {
        "Destinations": {
          "OrderingGrpcDestination": {
            "Address": "https://localhost:7006"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HttpRequest": {
          "Version": "2",
          "VersionPolicy": "RequestVersionExact"
        }
      },
      "InventoryGrpcCluster": {
        "Destinations": {
          "InventoryGrpcDestination": {
            "Address": "https://localhost:7007"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HttpRequest": {
          "Version": "2",
          "VersionPolicy": "RequestVersionExact"
        }
      },
      "InvestorGrpcCluster": {
        "Destinations": {
          "InvestorGrpcDestination": {
            "Address": "https://localhost:7003"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HttpRequest": {
          "Version": "2",
          "VersionPolicy": "RequestVersionExact"
        }
      },
      "BasketGrpcCluster": {
        "Destinations": {
          "BasketGrpcDestination": {
            "Address": "https://localhost:7008"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HttpRequest": {
          "Version": "2",
          "VersionPolicy": "RequestVersionExact"
        }
      },
      "IntegrationGrpcCluster": {
        "Destinations": {
          "IntegrationGrpcDestination": {
            "Address": "https://localhost:7009"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HttpRequest": {
          "Version": "2",
          "VersionPolicy": "RequestVersionExact"
        }
      },
      "JobGrpcCluster": {
        "Destinations": {
          "JobGrpcDestination": {
            "Address": "https://localhost:7010"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "HttpRequest": {
          "Version": "2",
          "VersionPolicy": "RequestVersionExact"
        }
      }
    }
  },
  
  "JwtSettings": {
    "Authority": "https://localhost:7002",
    "Audience": "flex-api",
    "RequireHttpsMetadata": false
  },
  
  "RateLimiting": {
    "DefaultPermitLimit": 100,
    "DefaultWindow": "00:01:00",
    "DefaultQueueLimit": 10
  },
  
  "OpenTelemetry": {
    "ServiceName": "Flex.Gateway.Yarp",
    "ServiceVersion": "1.0.0",
    "OtlpEndpoint": "http://localhost:4317"
  }
}
